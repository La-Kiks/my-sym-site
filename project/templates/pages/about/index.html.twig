            <h1 class="mb-4 mx-auto text-3xl font-mono font-bold text-gray-700 dark:text-white md:text-5xl ">
                <span class="p-0.5 bg-gold-tips-300 rounded-lg">{{ 'app.about.achievements.title'|trans }}</span>
            </h1>
            <p class="mb-2 text-lg font-normal text-left text-gray-700 dark:text-gray-400">
                {{ 'app.about.achievements.intro'|trans }}
            </p>

            <ul class="mb-4 md:pl-4 text-lg font-normal text-left text-gray-600 dark:text-gray-400">
                <li><b>- {{ 'app.about.achievements.cdr'|trans }} :</b> {{ 'app.about.achievements.cdr.text'|trans }}</li>
                <li><b>- {{ 'app.about.achievements.draft'|trans }} :</b> {{ 'app.about.achievements.draft.text'|trans }}</li>
                <li><b>- {{ 'app.about.achievements.blog'|trans }} :</b> {{ 'app.about.achievements.blog.text'|trans }} </li>
                <li><b>- {{ 'app.about.achievements.tech'|trans }} :</b> {{ 'app.about.achievements.tech.text'|trans }} </li>
            </ul>
        </div>

