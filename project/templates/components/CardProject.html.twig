<div{{ attributes }}>
    <!-- component html -->
    <a href=""
       class="flex flex-col items-center bg-white border border-gray-200 rounded-lg shadow md:flex-row md:max-w-xl
       hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
        <img
                class="aspect-square object-contain w-fit h-40 sm:h-48 sm:w-48"
                src="{{ image }}" alt="Screenshot of the project">

        <div class="flex flex-col justify-between p-4 leading-normal  border-t md:border-none">

            <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">{{ title }}</h5>

            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">{{ description }}</p>

            <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                <span> Technos :</span>
                {{ techno }}</p>
        </div>
    </a>

</div>
