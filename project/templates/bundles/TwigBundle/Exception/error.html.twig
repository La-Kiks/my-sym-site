{% extends "base.html.twig"%}

{% block title %} {{ exception.statusCode }} Error {% endblock %}

{% block body %}
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        <div class="mx-auto max-w-screen-sm text-center">
            <h1 class="mb-4 text-7xl tracking-tight font-extrabold lg:text-9xl text-primary-600 dark:text-primary-500">
                {{ exception.statusCode }}</h1>
            <p class="mb-4 text-3xl tracking-tight font-bold text-gray-900 md:text-4xl dark:text-white">{{ exception.statusText }}</p>
            <p class="mb-4 text-lg font-light text-gray-500 dark:text-gray-400">Sorry, we could not deliver... You'll find lots to explore on the home page. </p>
            <a href="{{ path('app_home') }}"
               class="inline-flex text-black bg-gold-tips-300 hover:bg-gold-tips-200 font-medium rounded-lg text-sm px-5 py-2.5 text-center my-4">
                Back to Homepage
            </a>
        </div>
    </div>
{%  endblock %}